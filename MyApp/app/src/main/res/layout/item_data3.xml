<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:fontFamily="@font/calibri"
                android:text="Rakuten UN-LIMIT 12G"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="34sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RadioGroup
                android:id="@+id/radioBtnGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <RadioButton
                    android:id="@+id/radioDataOnly3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="データのみ" />
                <RadioButton
                    android:id="@+id/radioDataAndCall3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="データと通話" />
            </RadioGroup>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tvPriceData3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:text="1000円/月"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp"
                android:textStyle="bold"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/tvPriceDataAndCall3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:text="2000円/月"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp"
                android:textStyle="bold"
                android:visibility="gone"/>



        </LinearLayout>



        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:orientation="horizontal">

            <Button
                android:id="@+id/detailData3Btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="詳細"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/buy12GbBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="申し込み"
                android:layout_marginStart="17dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>

