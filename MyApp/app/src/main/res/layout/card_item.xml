<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_margin="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        android:clickable="true">


        <LinearLayout
            android:id="@+id/rowPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:clickable="true"
            >

            <TextView
                android:id="@+id/phoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="番号："
                android:textColor="@color/sales_primary_text"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="phone number"
                android:clickable="true"
                android:textColor="@color/sales_primary_text"
                android:textSize="25sp" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/rowCodeSim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:clickable="true"
            >

            <TextView
                android:id="@+id/codeSim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="コード："
                android:textColor="@color/sales_primary_text"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCodeSim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sim code"
                android:clickable="true"
                android:textColor="@color/sales_primary_text"
                android:textSize="25sp" />



        </LinearLayout>
        <LinearLayout
            android:id="@+id/rowSimTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/rowSimPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="単価："
                android:textColor="@color/sales_primary_text"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPriceSim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price"
                android:clickable="true"
                android:textColor="@color/sales_primary_text"
                android:textSize="25sp" />


        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>